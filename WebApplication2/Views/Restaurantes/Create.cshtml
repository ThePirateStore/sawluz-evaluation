@model WebApplication2.Models.Restaurante

@{
    ViewBag.Title = "Create";
}

<h2>CADASTRO DE RESTAURANTE</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h3>Dados</h3>
        <div class="form-group">
            @Html.LabelFor(model => model.RestauranteNome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RestauranteNome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RestauranteNome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success" value="Salvar">
                    <span class="glyphicon glyphicon-floppy-disk"> </span> Salvar
                </button>
            </div>
        </div>
    </div>

}

<div>
    <a href="~/Restaurantes">
        <button class="btn btn-danger">
            <span class="glyphicon glyphicon-repeat"> </span> Cancelar
        </button>
    </a>
</div>
